<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/lab1_bgmain">

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:fontFamily="sans-serif"
        android:text="Hello"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <ImageView
        android:id="@+id/image_helloElephant"
        android:layout_width="326dp"
        android:layout_height="316dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="66dp"
        android:alpha=".5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_greeting"
        app:srcCompat="@drawable/lab1_elephanthello"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_clickMe"
        android:layout_width="215dp"
        android:layout_height="78dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="100dp"
        android:text="Click Me"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_helloElephant"
        android:background="@drawable/lab1_bgbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>